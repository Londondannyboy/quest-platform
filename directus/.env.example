# Quest Platform v2.2 - Directus Environment Variables
# Copy to .env and fill in actual values

# ============================================================================
# NEON DATABASE (Restricted User)
# ============================================================================
NEON_HOST=ep-xxx-xxx.neon.tech
NEON_DATABASE=neondb
DIRECTUS_DB_PASSWORD=your-directus-user-password-here

# ============================================================================
# ADMIN CREDENTIALS
# ============================================================================
ADMIN_EMAIL=admin@quest.com
ADMIN_PASSWORD=your-strong-admin-password-here

# ============================================================================
# SECURITY KEYS (Generate with: openssl rand -base64 32)
# ============================================================================
DIRECTUS_KEY=your-random-32-char-key-here
DIRECTUS_SECRET=your-random-32-char-secret-here

# ============================================================================
# REDIS (Upstash or Railway)
# ============================================================================
REDIS_URL=redis://default:password@redis.upstash.io:6379

# ============================================================================
# CLOUDINARY
# ============================================================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================================================
# EMAIL (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
